async function OldalLetilt(){
  console.log("Belépett a függvénybe.");
  let sql = `select count(*) from feladatok f`;
  try {
    var valasz = await LekerdezesEredmenye(sql);
    var szam =  parseInt(valasz[0]["count(*)"]);
    console.log(valasz);

    var maxLapszam = Math.ceil(szam/15);
    console.log(szam);
    console.log(maxLapszam);
    var elso = document.getElementById("elsoli");
    var masodik = document.getElementById("masodikli");
    var harmadik = document.getElementById("harmadikli");
    var kovetkezo = document.getElementById("kovetkezo");

    if(elso.innerText==maxLapszam){
      masodik.style.visibility = "hidden";
      masodik.disabled = true;
      harmadik.style.visibility = "hidden";
      harmadik.disabled = true;
      kovetkezo.style.visibility = "hidden";
      kovetkezo.disabled = true;
    }
    else if(masodik.innerText==maxLapszam){
      harmadik.style.visibility = "hidden";
      harmadik.disabled= true;
      kovetkezo.style.visibility = "hidden";
      kovetkezo.disabled = true;
    }
    else if(harmadik.innerText==maxLapszam){
      kovetkezo.style.visibility = "hidden";
      kovetkezo.disabled = true;
    }
  } catch (error) {
    console.error("Hiba történt az SQL lekérdezés során:", error);
  }
}


function SzamClick(id) {
  if (id == "elso") {
    fooldaoldalszam = parseInt(document.getElementById("elso").innerHTML);
  } else if (id == "masodik") {
    fooldaoldalszam = parseInt(document.getElementById("masodik").innerHTML);
  } else if (id == "harmadik") {
    fooldaoldalszam = parseInt(document.getElementById("harmadik").innerHTML);
  }
  limitAlso = (fooldaoldalszam - 1) * 15;
  limitFelso = 15;
  elozolenyomott = id;
  FeladatListaz();
  OldalLetilt();
}

function Elozo() {
  let elso = document.getElementById("elso");
  let masodik = document.getElementById("masodik");
  let harmadik = document.getElementById("harmadik");
  if (parseInt(elso.innerHTML) > 1) {
    elso.innerHTML = `${parseInt(elso.innerHTML) - 3}`;
    masodik.innerHTML = `${parseInt(masodik.innerHTML) - 3}`;
    harmadik.innerHTML = `${parseInt(harmadik.innerHTML) - 3}`;
    fooldaoldalszam = parseInt(elso.innerHTML);
    limitAlso = (fooldaoldalszam - 1) * 15;
    limitFelso = 15;
    FeladatListaz();
    console.log(fooldaoldalszam);
  }
  let elsoli = document.getElementById("elsoli");
  let masodikli = document.getElementById("masodikli");
  let harmadikli = document.getElementById("harmadikli");
  elsoli.disabled = false;
  elsoli.style.visibility = "visible";
  masodikli.disabled = false;
  masodikli.style.visibility = "visible";
  harmadikli.disabled = false;
  harmadikli.style.visibility = "visible";
  kovetkezo.disabled = false;
  kovetkezo.style.visibility = "visible";
}

function Kovetkezo() {
  OldalLetilt();
  let elso = document.getElementById("elso");
  let masodik = document.getElementById("masodik");
  let harmadik = document.getElementById("harmadik");
  elso.innerHTML = `${parseInt(elso.innerHTML) + 3}`;
  masodik.innerHTML = `${parseInt(masodik.innerHTML) + 3}`;
  harmadik.innerHTML = `${parseInt(harmadik.innerHTML) + 3}`;
  fooldaoldalszam = parseInt(elso.innerHTML);
  limitAlso = (fooldaoldalszam - 1) * 15;
  limitFelso = 15;
  FeladatListaz();
  console.log(fooldaoldalszam);
}
